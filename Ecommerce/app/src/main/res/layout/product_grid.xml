<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/black"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:background="@color/black"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/product_image_user"
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:elevation="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/croissant" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_title_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="Product title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_category_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:text="category" />

    <TextView
        android:id="@+id/product_description_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/product_price_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />
</LinearLayout>